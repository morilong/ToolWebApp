@model dynamic
@{
    Layout = "~/Views/Shared/_LayoutCommon.cshtml";

    ViewBag.Title = "文本合并";
    ViewBag.ContentTitle = "文本合并";
    ViewBag.ShowBrowserInfo = true;
}
@section HeadCss{
    <link href="~/Content/css/id.css" rel="stylesheet" />
    <style>
        .content span {
            padding-left: 30px;
        }

        textarea {
            width: 240px !important;
        }

        #txtData3 {
            width: 300px !important;
        }
    </style>
}
<div class="content">
    <span>合并分隔符：<input type="text" id="txtFgf" value="----" /></span>
    <span><button type="button" class="btn btn-primary" id="btnMerge">合并</button></span>
    @*<span><button type="submit" class="btn btn-default" id="btnDown">保存合并后文本</button></span>*@
    <table>
        <tr>
            <td>
                <textarea class="form-control" rows="22" wrap="off" id="txtData1" placeholder="这里填写待合并文本1"></textarea>
            </td>
            <td>
                <textarea class="form-control" rows="22" wrap="off" id="txtData2" placeholder="这里填写待合并文本2"></textarea>
            </td>
            <td>
                <textarea class="form-control" rows="22" wrap="off" id="txtData3" name="data" placeholder="这里显示合并结果"></textarea>
            </td>
        </tr>
        <tr align="center">
            <td>文本1个数：<input class="txtNum" id="txtNum1" value="0" /></td>
            <td>文本2个数：<input class="txtNum" id="txtNum2" value="0" /></td>
            <td>合并后个数：<input class="txtNum" id="txtNum3" value="0" name="num" /></td>
        </tr>
    </table>
</div>
@section FootJs{
    <script src="~/Content/js/jquery.cookie.js"></script>
    <script src="~/Content/js/str.js"></script>
    <script src="~/Content/js/str-hb.js"></script>
}
@section FooterLinks{
    <span><a href="/str">文本处理工具</a></span><span><a href="/str/zh">文本格式转换</a></span>
}
